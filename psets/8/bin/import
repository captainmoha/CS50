#!/usr/bin/env php
<?php
	
	require("../includes/config.php");

	if (count($argv) < 2)
	{
		print("Usage: ./import fileName\n");
		exit;
	}

    $path = $argv[1];
    if (file_exists($path) && is_readable($path))
    {
    	$handle = fopen($path, "r");
    	while($row = fgetcsv($handle, 0, "\t"))
    	{
    		$rowLength = count($row);

    		/*foreach ($row as $field)
    		{
    			print("{$field}\t");
    		}
    		print("\n");*/

    		$isInserted = CS50::query("INSERT IGNORE INTO places (country_code, postal_code, place_name, admin_name1, admin_code1, admin_name2, admin_code2, admin_name3, admin_code3, latitude, longitude, accuracy) VALUES(?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?)", $row[0], $row[1], $row[2], $row[3], $row[4], $row[5], $row[6], $row[7], $row[8], $row[9], $row[10], $row[11]);

    		if (!$isInserted)
    		{
    			print("Insertion failed :(\n");
    			exit;
    		}
    	} 
    }

    else
    {
    	print("Could not open file.\n");
    }

?>